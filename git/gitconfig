[user]
	name = Jonathan Too
	email = jonathanjtoo@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[color]
	branch = auto
	diff = auto
	status = auto
	showbranch = auto
	ui = true
[color "status"]
	added = green
	changed = cyan
	untracked = magenta
[color "diff"]
	meta = cyan bold
	frag = magenta bold
[push]
#	default = simple
    default = current
[alias]
	superclean = "!f(){ git clean -xffd && git checkout . && git reset --hard;};f"
	pwd = !pwd
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%aN/%aE>%Creset' --abbrev-commit --date=relative
	logone = log --oneline
	st = status
	stu = status -uno
	bvv = branch -vv
	bname = symbolic-ref --short HEAD
	wl = worktree list
	a = add
	ap = add -p
	c = commit
	cm = commit -m
	d = diff
	dc = diff --cached
	alias = config --get-regexp ^alias\\.
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
